{
  "extends": ["eslint:recommended", "standard"],
  "env": {
    "amd": true,
    "browser": false,
    "mocha": false,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 5
  },
  "rules": {
    /* Node.JS */
    "no-sync": 2,

    "semi": [2, "always"],
    "no-extra-semi": 2,
    "semi-spacing": [2, { "before": false, "after": true }]
  }
}
